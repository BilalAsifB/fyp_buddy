# Backend Environment Variables
# Copy this file to .env and update with your actual values

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/fyp_buddy?retryWrites=true&w=majority
MONGODB_DATABASE_NAME=fyp_buddy

# LangSmith Configuration (for tracing and monitoring)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_PROJECT=fyp-agent-api

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com